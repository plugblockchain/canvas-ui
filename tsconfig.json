{
  "extends": "@polkadot/dev/config/tsconfig",
  "exclude": [
    "build/**/*",
    "**/build/**/*"
  ],
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@canvas-ui/app/*": ["packages/app/src/*"],
      "@canvas-ui/app": ["packages/app/src"],
      "@canvas-ui/app-config/*": [ "packages/app-config/src/*" ],
      "@canvas-ui/app-routing": [ "packages/app-routing/src" ],
      "@canvas-ui/app-routing/*": [ "packages/app-routing/src/*" ],
      "@canvas-ui/app-instantiate": [ "packages/page-instantiate/src" ],
      "@canvas-ui/app-instantiate/*": [ "packages/page-instantiate/src/*" ],
      "@canvas-ui/app-execute": [ "packages/page-execute/src" ],
      "@canvas-ui/app-execute/*": [ "packages/page-execute/src/*" ],
      "@canvas-ui/app-i18n": [ "packages/page-i18n/src" ],
      "@canvas-ui/app-i18n/*": [ "packages/page-i18n/src/*" ],
      "@canvas-ui/app-settings": [ "packages/page-settings/src" ],
      "@canvas-ui/app-settings/*": [ "packages/page-settings/src/*" ],
      "@canvas-ui/app-upload": [ "packages/page-upload/src" ],
      "@canvas-ui/app-upload/*": [ "packages/page-upload/src/*" ],
      "@canvas-ui/react-api": [ "packages/react-api/src" ],
      "@canvas-ui/react-api/*": [ "packages/react-api/src/*" ],
      "@canvas-ui/react-components": [ "packages/react-components/src" ],
      "@canvas-ui/react-components/*": [ "packages/react-components/src/*" ],
      "@canvas-ui/react-hooks": [ "packages/react-hooks/src" ],
      "@canvas-ui/react-hooks/*": [ "packages/react-hooks/src/*" ],
      "@canvas-ui/react-params": [ "packages/react-params/src" ],
      "@canvas-ui/react-params/*": [ "packages/react-params/src/*" ],
      "@canvas-ui/react-query": [ "packages/react-query/src" ],
      "@canvas-ui/react-query/*": [ "packages/react-query/src/*" ],
      "@canvas-ui/react-signer": [ "packages/react-signer/src" ],
      "@canvas-ui/react-store/*": [ "packages/react-store/src/*" ],
      "@canvas-ui/react-store": [ "packages/react-store/src" ],
      "@canvas-ui/react-signer/*": [ "packages/react-signer/src/*" ],
      "@canvas-ui/react-util": [ "packages/react-util/src" ],
      "@canvas-ui/react-util/*": [ "packages/react-util/src/*" ],
      "@canvas-ui/test-support/*": ["packages/test-support/src/*"],
      "@canvas-ui/test-support": ["packages/test-support/src"],
    },
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@polkadot/ts",
      "./node_modules/@types"
    ],
    "esModuleInterop": true,
  }
}
